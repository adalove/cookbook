<div id="ingredients">
  <ol>
  <% @ingredients.each do |ingredient| %>
    <ul>
      <li><%= link_to(ingredient.name, ingredient) %></li>
      <li><%= ingredient.measurement %></li>
      <li><%= ingredient.cost %></li>
      <li><%= image_tag(ingredient.image) %></li>
    </ul>
  <% end %>
  </ol>